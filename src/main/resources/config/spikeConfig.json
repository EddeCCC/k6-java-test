{
  "name": "Stress test to determine the maximum load possible",
  "baseURL": "http://127.0.0.1:8080/books",
  "options": {
    "stages": [
      { "duration": "10s", "target": 50 },
      { "duration": "1m", "target": 50 },
      { "duration": "10s", "target": 20 }
    ],
    "thresholds": {
      "http_req_failed": [
        {
          "threshold": "rate<0.05",
          "abortOnFail": true,
          "delayAbortEval": "5s"
        }
      ],
      "checks": [
        {
          "threshold": "rate>0.9",
          "abortOnFail": true,
          "delayAbortEval": "5s"
        }
      ],
      "http_req_duration": [
        {
          "threshold": "p(90)<1",
          "abortOnFail": true,
          "delayAbortEval": "5s"
        },
        {
          "threshold": "avg<10",
          "abortOnFail": true,
          "delayAbortEval": "5s"
        }
      ]
    }
  },
  "requests": [
    {
      "type": "GET",
      "path": "/all",
      "params": {
        "tags": {
          "group": "home"
        }
      },
      "checks": {
        "status": 200,
        "error_code": 0
      }
    },
    {
      "type": "GET",
      "path": "/1",
      "checks": {
        "status": 200,
        "error_code": 0
      }
    },
    {
      "type": "GET",
      "path": "/2",
      "checks": {
        "status": 200,
        "error_code": 0
      }
    }
  ]
}